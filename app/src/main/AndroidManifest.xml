<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.proyecto.duckhunt">

    <application
        android:allowBackup="true"
        android:icon="@drawable/duck_hunt_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/duck_hunt_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.UserRankingActivity"
            android:label="@string/title_activity_user_ranking"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.GameActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>